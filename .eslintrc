{
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2,
                "maxBOF": 0,
                "maxEOF": 0
            }
        ],
        "react/jsx-uses-vars": [
            2
        ],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off"
    },
    "plugins": [
        "prettier",
        "react"
    ],
    "settings": {
        "react": {
            "version": "detect" // React version. "detect" automatically picks the version you have installed.
        }
    }
}